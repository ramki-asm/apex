<UserControl x:Class="UI.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="{StaticResource panelActiveColor}">
        <!-- Inside 1st Section -->
        <Grid Grid.Column="0" Margin="10" Background="{StaticResource panelActiveColor}">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Production Mode -->
            <Grid Grid.Row="0">
                <StackPanel VerticalAlignment="Center"
                            Background="Yellow">
                    <TextBlock Text="{Binding ProductionMode.ModeName}"
                               Foreground="Black"
                               FontSize="25"
                               FontFamily="Montserrat"
                               FontWeight="Medium" 
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Inner 1st Section 2nd Row -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <!-- Holder 1 -->
                    <ColumnDefinition Width="*"/>
                    <!-- Holder 2 -->
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Holder 1 -->
                <Grid Grid.Column="0">
                    <StackPanel Orientation="Vertical">
                        <Label Content="{Binding Holders[0].HolderName}"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="23"
                                   FontFamily="Montserrat"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                        <Label Content="{Binding Holders[0].SerialNumber, StringFormat='SN: {0}'}"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="18"
                                   FontFamily="Montserrat"
                                   FontWeight="Light"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"/>
                        <Label Content="{Binding Holders[0].Color, StringFormat='Color: {0}'}"
                                    Foreground="{StaticResource titleColor2}"
                                    FontSize="18"
                                    FontFamily="Montserrat"
                                    FontWeight="Light"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"/>
                        <Label Content="{Binding Holders[0].MPN, StringFormat='MPN: {0}'}"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="18"
                                   FontFamily="Montserrat"
                                   FontWeight="Light"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"/>
                        <Label Content="{Binding Holders[0].IMEI, StringFormat='IMEI: {0}'}"
                                    Foreground="{StaticResource titleColor2}"
                                    FontSize="18"
                                    FontFamily="Montserrat"
                                    FontWeight="Light"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"/>
                        <Label Content="{Binding Holders[0].Artwork, StringFormat='Artwork: {0}'}"
                                    Foreground="{StaticResource titleColor2}"
                                    FontSize="18"
                                    FontFamily="Montserrat"
                                    FontWeight="Light"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"/>
                    </StackPanel>
                </Grid>

                <!-- Holder 2 -->
                <Grid Grid.Column="1">
                    <StackPanel Orientation="Vertical">
                        <Label Content="{Binding Holders[1].HolderName}"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="23"
                                   FontFamily="Montserrat"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                        <Label Content="{Binding Holders[1].SerialNumber, StringFormat='SN: {0}'}"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="18"
                                   FontFamily="Montserrat"
                                   FontWeight="Light"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"/>
                        <Label Content="{Binding Holders[1].Color, StringFormat='Color: {0}'}"
                                    Foreground="{StaticResource titleColor2}"
                                    FontSize="18"
                                    FontFamily="Montserrat"
                                    FontWeight="Light"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"/>
                        <Label Content="{Binding Holders[1].MPN, StringFormat='MPN: {0}'}"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="18"
                                   FontFamily="Montserrat"
                                   FontWeight="Light"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"/>
                        <Label Content="{Binding Holders[1].IMEI, StringFormat='IMEI: {0}'}"
                                    Foreground="{StaticResource titleColor2}"
                                    FontSize="18"
                                    FontFamily="Montserrat"
                                    FontWeight="Light"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"/>
                        <Label Content="{Binding Holders[1].Artwork, StringFormat='Artwork: {0}'}"
                                    Foreground="{StaticResource titleColor2}"
                                    FontSize="18"
                                    FontFamily="Montserrat"
                                    FontWeight="Light"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Inner 1st Section 3rd Row -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <!-- Holder 3 -->
                    <ColumnDefinition Width="*"/>
                    <!-- Holder 4 -->
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Holder 3 -->
                <Grid Grid.Column="0">
                    <StackPanel Orientation="Vertical">
                        <Label Content="{Binding Holders[2].HolderName}"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="23"
                                   FontFamily="Montserrat"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                        <Label Content="{Binding Holders[2].SerialNumber, StringFormat='SN: {0}'}"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="18"
                                   FontFamily="Montserrat"
                                   FontWeight="Light"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"/>
                        <Label Content="{Binding Holders[2].Color, StringFormat='Color: {0}'}"
                                    Foreground="{StaticResource titleColor2}"
                                    FontSize="18"
                                    FontFamily="Montserrat"
                                    FontWeight="Light"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"/>
                        <Label Content="{Binding Holders[2].MPN, StringFormat='MPN: {0}'}"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="18"
                                   FontFamily="Montserrat"
                                   FontWeight="Light"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"/>
                        <Label Content="{Binding Holders[2].IMEI, StringFormat='IMEI: {0}'}"
                                    Foreground="{StaticResource titleColor2}"
                                    FontSize="18"
                                    FontFamily="Montserrat"
                                    FontWeight="Light"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"/>
                        <Label Content="{Binding Holders[2].Artwork, StringFormat='Artwork: {0}'}"
                                    Foreground="{StaticResource titleColor2}"
                                    FontSize="18"
                                    FontFamily="Montserrat"
                                    FontWeight="Light"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"/>
                    </StackPanel>
                </Grid>

                <!-- Holder 4 -->
                <Grid Grid.Column="1">
                    <StackPanel Orientation="Vertical">
                        <Label Content="{Binding Holders[3].HolderName}"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="23"
                                   FontFamily="Montserrat"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                        <Label Content="{Binding Holders[3].SerialNumber, StringFormat='SN: {0}'}"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="18"
                                   FontFamily="Montserrat"
                                   FontWeight="Light"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"/>
                        <Label Content="{Binding Holders[3].Color, StringFormat='Color: {0}'}"
                                    Foreground="{StaticResource titleColor2}"
                                    FontSize="18"
                                    FontFamily="Montserrat"
                                    FontWeight="Light"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"/>
                        <Label Content="{Binding Holders[3].MPN, StringFormat='MPN: {0}'}"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="18"
                                   FontFamily="Montserrat"
                                   FontWeight="Light"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"/>
                        <Label Content="{Binding Holders[3].IMEI, StringFormat='IMEI: {0}'}"
                                    Foreground="{StaticResource titleColor2}"
                                    FontSize="18"
                                    FontFamily="Montserrat"
                                    FontWeight="Light"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"/>
                        <Label Content="{Binding Holders[3].Artwork, StringFormat='Artwork: {0}'}"
                                    Foreground="{StaticResource titleColor2}"
                                    FontSize="18"
                                    FontFamily="Montserrat"
                                    FontWeight="Light"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
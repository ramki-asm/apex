<UserControl x:Class="UI.View.HolderInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:properties="clr-namespace:UI.Resources"
             xmlns:local="clr-namespace:UI.View"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300">
    <StackPanel Background="{StaticResource panelActiveColor}">
        <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>
        <StackPanel Margin="10">
            <TextBlock Text="{Binding Source={x:Static properties:Strings.HolderSerialNumber}}" />
            <TextBlock Text="{Binding SN}" />
            <TextBlock Text="{Binding Source={x:Static properties:Strings.HolderColor}}" />
            <TextBlock Text="{Binding Color}" />
            <TextBlock Text="{Binding Source={x:Static properties:Strings.HolderMPIN}}" />
            <TextBlock Text="{Binding MPN}" />
            <TextBlock Text="{Binding Source={x:Static properties:Strings.HolderIMEI}}" />
            <TextBlock Text="{Binding IMEI}" />
            <TextBlock Text="{Binding Source={x:Static properties:Strings.HolderArtWork}}" />
            <TextBlock Text="{Binding Artwork}" />
        </StackPanel>
    </StackPanel>
</UserControl>

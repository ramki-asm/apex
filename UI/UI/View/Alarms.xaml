<UserControl x:Class="UI.View.Alarms"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.View"
        mc:Ignorable="d"
        >
    <Grid>

        <DataGrid AutoGenerateColumns="True"  Background="{StaticResource panelActiveColor}"
                  ItemsSource="{Binding Alarm}" 
                  CanUserAddRows="True" 
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Serial" 
                                   Binding="{Binding Serial}" 
                                   Width="80"/>
                <DataGridTextColumn Header="Module" 
                                   Binding="{Binding Module}" 
                                   Width="120"/>
                <DataGridTextColumn Header="Content" 
                                   Binding="{Binding Content}" 
                                   Width="*"/>
                <DataGridTextColumn Header="Time" 
                                   Binding="{Binding Time, StringFormat={}{0:HH:mm:ss}}" 
                                   Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

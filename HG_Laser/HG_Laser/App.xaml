<Application x:Class="HG_Laser.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HG_Laser"
            xmlns:vm="clr-namespace:HG_Laser.ViewModel"
             xmlns:controls="clr-namespace:UI.View"
xmlns:view="clr-namespace:HG_Laser.View"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/UIColors.xaml"/>
                <ResourceDictionary Source="/Styles/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        <DataTemplate DataType="{x:Type vm:HomeViewModel}">
            <view:HomeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingViewModel}">
            <controls:SettingView/>
        </DataTemplate>
            <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
                <controls:DashboardView/>
            </DataTemplate>
        </ResourceDictionary>

    </Application.Resources>
</Application>
                                            Foreground="{StaticResource titleColor2}"
                                            FontSize="18"
                                            FontFamily="Montserrat"
                                            FontWeight="Light"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="left"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                         />

                        <Label Content="MPN :"

                <StackPanel VerticalAlignment="Center"
                                            Background="Yellow">
                    <TextBlock Text="PRODUCTION MODE"
                                       Foreground="Black"
                                       FontSize="25"
                                       FontFamily="Montserrat"
                                       FontWeight="Medium" 
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                               
                                       />
                </StackPanel>

            </Grid>

            <!--Inner 1st Section 2nd Row-->

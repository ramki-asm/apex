                    <!--Inside 1st Section  1st Block-->
                    <ColumnDefinition Width="*"/>
                    <!--Inside 2nd Section 2nd Block-->
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Inside 1st Section  1st Block-->

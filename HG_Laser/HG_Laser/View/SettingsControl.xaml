<Window x:Class="UI.View.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Window.Resources>
        <!-- Resource definitions remain the same -->
        <Style TargetType="{x:Type TabControl}" x:Key="ModernTabControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabControl}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TabPanel Grid.Row="0" 
                                      Background="Transparent"
                                      IsItemsHost="True"
                                      HorizontalAlignment="Center"
                                      Margin="10 0"/>

                            <Border Grid.Row="1" 
                                    Background="{StaticResource cardBackground}"
                                    CornerRadius="0 0 4 4"
                                    Margin="10 0 10 10"
                                    BorderThickness="1"
                                    BorderBrush="{StaticResource subtleBorder}"
                                    Effect="{StaticResource CardShadow}">
                                <ContentPresenter ContentSource="SelectedContent"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type TabItem}" x:Key="ModernTabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Main Tab Header -->
                            <Border Grid.Row="0"
                                    Name="TabBorder"
                                    CornerRadius="4 4 0 0"
                                    Margin="5 0 5 -1"
                                    BorderThickness="1 1 1 0"
                                    BorderBrush="{StaticResource subtleBorder}"
                                    Background="{StaticResource tabInactive}">
                                <ContentPresenter x:Name="ContentSite"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Header"
                                              Margin="15 10"
                                              RecognizesAccessKey="True"/>
                            </Border>

                            <!-- Underline Indicator (separate element) -->
                            <Border Grid.Row="1"
                                    Name="Underline"
                                    Height="3"
                                    Background="Transparent"
                                    CornerRadius="2"
                                    Margin="5 0 5 0"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="{StaticResource cardBackground}"/>
                                <Setter TargetName="TabBorder" Property="BorderBrush" Value="{StaticResource subtleBorder}"/>
                                <Setter TargetName="Underline" Property="Background" Value="{StaticResource accentColor}"/>
                                <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="{StaticResource primaryText}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="{StaticResource secondaryText}"/>
                                <Setter TargetName="TabBorder" Property="Background" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="{StaticResource tabHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource secondaryText}"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource panelActiveColor}">
        <TabControl Background="Transparent" BorderThickness="0">
            <!-- Serial Communication Tab -->
            <TabItem Header="Serial Communication">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <GroupBox Header="Serial Port Configuration" Margin="0 0 0 10">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Port:" Grid.Row="0" Grid.Column="0" Margin="0 0 5 5"/>
                                <ComboBox Grid.Row="0" Grid.Column="1" Margin="0 0 0 5" 
                                      ItemsSource="{Binding AvailablePorts}"
                                      SelectedItem="{Binding SelectedPort}"/>

                                <TextBlock Text="Baud Rate:" Grid.Row="1" Grid.Column="0" Margin="0 0 5 5"/>
                                <ComboBox Grid.Row="1" Grid.Column="1" Margin="0 0 0 5"
                                      ItemsSource="{Binding BaudRates}"
                                      SelectedItem="{Binding SelectedBaudRate}"/>

                                <TextBlock Text="Parity:" Grid.Row="2" Grid.Column="0" Margin="0 0 5 5"/>
                                <ComboBox Grid.Row="2" Grid.Column="1" Margin="0 0 0 5"
                                      ItemsSource="{Binding ParityOptions}"
                                      SelectedItem="{Binding SelectedParity}"/>

                                <Button Grid.Row="3" Grid.ColumnSpan="2" Content="Connect" 
                                    Command="{Binding ConnectSerialCommand}"
                                    Margin="0 10 0 0" Height="25"/>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Connection Status">
                            <StackPanel>
                                <TextBlock Text="{Binding ConnectionStatus}" Margin="5"/>
                                <ProgressBar IsIndeterminate="{Binding IsConnecting}" 
                                         Height="5" Margin="5 0"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- TCP/IP Communication Tab -->
            <TabItem Header="TCP/IP Communication">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <GroupBox Header="Network Configuration">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="IP Address:" Grid.Row="0" Grid.Column="0" Margin="0 0 5 5"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Margin="0 0 0 5"
                                     Text="{Binding IpAddress}"/>

                                <TextBlock Text="Port:" Grid.Row="1" Grid.Column="0" Margin="0 0 5 5"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Margin="0 0 0 5"
                                     Text="{Binding Port}"/>

                                <Button Grid.Row="2" Grid.ColumnSpan="2" Content="Connect" 
                                    Command="{Binding ConnectTcpCommand}"
                                    Margin="0 10 0 0" Height="25"/>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Ethernet Communication Tab -->
            <TabItem Header="Ethernet Communication">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <GroupBox Header="Ethernet Settings">
                            <Grid Margin="5">
                                <!-- Add MAC address, IP config fields -->
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- USB Connection Tab -->
            <TabItem Header="USB Connection">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <GroupBox Header="USB Devices">
                            <ListBox ItemsSource="{Binding UsbDevices}"
                                 SelectedItem="{Binding SelectedUsbDevice}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding DeviceName}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding DeviceId}" FontSize="10"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </GroupBox>
                        <Button Content="Refresh Devices" Command="{Binding RefreshUsbCommand}"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>